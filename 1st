#include <iostream>
using namespace std;

int main() {
    // Integer
    int int_var = 10;
    int* p_int = &int_var;
    cout << "The original address of the int is: " << p_int << endl;
    cout << "The size (in bytes) of an int is " << sizeof(int) << endl;
    p_int++;
    cout << "The address of int after increment is: " << p_int << endl << endl;

    // Float
    float float_var = 3.14f;
    float* p_float = &float_var;
    cout << "The original address of the float is: " << p_float << endl;
    cout << "The size (in bytes) of a float is " << sizeof(float) << endl;
    p_float++;
    cout << "The address of float after increment is: " << p_float << endl << endl;

    // Char
    char char_var = 'A';
    char* p_char = &char_var;
    cout << "The original address of the char is: " << static_cast<void*>(p_char) << endl;
    cout << "The size (in bytes) of a char is " << sizeof(char) << endl;
    p_char++;
    cout << "The address of char after increment is: " << static_cast<void*>(p_char) << endl << endl;

    // Bool
    bool bool_var = true;
    bool* p_bool = &bool_var;
    cout << "The original address of the bool is: " << static_cast<void*>(p_bool) << endl;
    cout << "The size (in bytes) of a bool is " << sizeof(bool) << endl;
    p_bool++;
    cout << "The address of bool after increment is: " << static_cast<void*>(p_bool) << endl << endl;

    // Double
    double double_var = 6.28;
    double* p_double = &double_var;
    cout << "The original address of the double is: " << p_double << endl;
    cout << "The size (in bytes) of a double is " << sizeof(double) << endl;
    p_double++;
    cout << "The address of double after increment is: " << p_double << endl;

    return 0;
}




